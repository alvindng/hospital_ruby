<h1>List of Doctors</h1>

<% if @doctors.any?() %>
  <h3>Here are your doctors:</h3>

  <ul>
    <% @doctors.each() do |doctor| %>
      <li><a href="/doctors/<%= doctor.id()%>"><%= doctor.name() %></a> </li>
    <% end %>
  </ul>

<% else %>

    <p>There are no doctors yet!</p>

<% end %>

<div class="container">
  <a href="/"><button class="btn">Home</a>
  <a href="/doctors"><button class="btn">View All Doctors</a>
  <a href="/doctors/new"><button class="btn">Add New Doctor</a>
  <a href="/patient/new"><button class="btn">Add New Patient</a>
</div>
