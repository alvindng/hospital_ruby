<h1><%=@doctor.name() %></h1>

<h2>Specialty: <%=@doctor.specialty()%></h2>

<% if @doctor.patients().any?() %>

  <h3>Patients: </h3>
  <ul>
    <%@patients.each() do |patient| %>
      <li><a href="/patients/<%= patient.id()%>"><%= patient.name() %></a> </li>
    <% end %>
  </ul>

  <% else %>
    <p>This doctor has no patients!</p>
  <% end %>

  <div class="container">
    <a href="/"><button class="btn">Home</a>
    <a href="/doctors"><button class="btn">View All Doctors</a>
    <a href="/doctors/new"><button class="btn">Add New Doctor</a>
    <a href="/patient/new"><button class="btn">Add New Patient</a>
  </div>
